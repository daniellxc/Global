                <span id="vldDescricao" name="vldDescricao"></span><br />
         @Html.HiddenFor(d=>d.DataCriacao)<br />
        
        @Html.LabelFor(d=>d.Caixa)<br />
            @Html.DropDownList("Caixa", new SelectList(string.Empty, "Value", "Text"), new { @style = "width:200px" }) 
          <br />
        

