@model List<LAB5GED.DOMAIN.Entidades.Documento>
@using GridMvc.Html

@Html.Grid(Model).Columns(c=>
    {
        c.Add(d => d.Descricao).Titled("Documento");
        c.Add(d => d.DataCriacao).Titled("Data da Captura").Filterable(true);
        c.Add(d => d.FK_Subserie.Id_subserie).Titled("ID.Subsérie").Filterable(true);
        c.Add(d => d.FK_Subserie.Rotulo_subserie).Titled("Nome da Subsérie").Filterable(true);
        c.Add().Encoded(false).Sanitized(false).RenderValueAs(b => @Html.ActionLink("Visualizar", "Visualizar", new { _registro = b.Registro }));
        c.Add().Encoded(false).Sanitized(false).RenderValueAs(b => @Html.ActionLink("Detalhes", "Detalhar", new { _registroDocumento = b.Registro }));
        c.Add().Encoded(false).Sanitized(false).RenderValueAs(b => @Html.ActionLink("Armazenar", "Armazenar","Caixa" ,new { _registroDocumento = b.Registro },""));
    }).WithPaging(10).Sortable(true).EmptyText("Todos os documentos encontram-se armazenados")